<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textStyle="bold"
        android:text="JSON"/>

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/btn_gravar_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gravar JSON"/>

    <Button
        android:id="@+id/btn_ler_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ler JSON"/>

    <Button
        android:id="@+id/btn_gravar_gson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gravar GSON"/>

    <Button
        android:id="@+id/btn_ler_gson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ler GSON"/>
</LinearLayout>